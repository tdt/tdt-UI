{{ include('header.twig') }}

    <div class='col-lg-12'>
        <h1>Dataset management</h1>
        <a href="{{ BASE_URL }}ui/datasets/edit" class="add btn btn-primary">Add a dataset</a>

        {% for key, package in packages %}

            <div class="buttons" id="remuser">
                <a href="#deleteDataset" class="btnrem" data-toggle="modal"></a>
            </div>

            <div  id="deleteDataset" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <p>Are you sure you want to delete this package? This will also remove all resource in the package.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" data-dismiss="modal" aria-hidden="true" class="btn btn-default" >No</button>
                            <button type="button" name="remove" value="remove" type="submit" class="btn btn-primary">Yes</button>
                        </div>
                    </div>
                </div>
            </div>

            <h2>{{ key }}</h2>

            <div id='{{key}}' class="accordion-body collapse in well">

                {% for resource in package %}

                    <div id="routetitle">
                    {{resource.name}}
                    </div>

                    <form action="resource/functions" method="post">

                        <input type="hidden" name="path" value="{{key}}/{{resource.name}}">
                        <div class="buttons" id="remres">
                            <div class="pull-left">
                                <a href='{{resource.uri | replace({'.about': '.json'}) }}' class="btn btn-primary">JSON</a>
                                <a href='{{resource.uri | replace({'.about': '.php'}) }}' class="btn">PHP</a>
                            </div>

                            <button class="btnedit" type="submit" name="edit" value="edit"></button>
                            <button href="#deleteresModal" data-toggle="modal" class="btnrem"></button>

                            <!-- Popup when trying to delete a resource -->
                            <div id="deleteresModal" class="modal hide fade" tabindex="-1">
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this resource?</p>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn" data-dismiss="modal" aria-hidden="true">No</button>
                                    <button name="remove" value="remove" type="submit" class="btn">Yes</button>
                                </div>
                            </div>
                        </div>
                    </form>

                    <h4 class="doct">documentation:</h4>
                    <div class="doc"> {{resource.documentation}} </div>


                {% endfor %}
            </div>
        {% endfor %}
    </div>

{{ include('footer.twig') }}